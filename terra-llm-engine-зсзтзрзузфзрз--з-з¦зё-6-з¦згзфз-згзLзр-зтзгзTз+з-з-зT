        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è —Å–º–µ–Ω—ã —è–∑—ã–∫–∞
        function setLanguage(lang) {
            currentLanguage = lang;
            updateInterface();
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –∞–∫—Ç–∏–≤–Ω—É—é –∫–Ω–æ–ø–∫—É —è–∑—ã–∫–∞
            var buttons = document.querySelectorAll('.lang-btn');
            for (var i = 0; i < buttons.length; i++) {
                buttons[i].classList.remove('active');
            }
            event.target.classList.add('active');
        }
        
        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞ –ø–æ–¥ –≤—ã–±—Ä–∞–Ω–Ω—ã–π —è–∑—ã–∫
        function updateInterface() {
            var t = translations[currentLanguage];
            
            document.querySelector('.header h1').textContent = t.title;
            document.querySelector('.header p').textContent = t.subtitle;
            document.querySelector('.input-area label').textContent = t.inputLabel;
            document.querySelector('.big-input').placeholder = t.placeholder;
            document.querySelector('.big-button').innerHTML = t.askButton;
            document.querySelector('#thinking').innerHTML = t.thinking;
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –±—ã—Å—Ç—Ä—ã–µ –∫–Ω–æ–ø–∫–∏
            var quickBtns = document.querySelectorAll('.simple-btn');
            var btnTexts = Object.values(t.quickButtons);
            for (var i = 0; i < quickBtns.length && i < btnTexts.length; i++) {
                quickBtns[i].textContent = btnTexts[i];
            }
        }
        
        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –±—ã—Å—Ç—Ä—ã—Ö –≤–æ–ø—Ä–æ—Å–æ–≤
        function quickQuestion(question) {
            document.getElementById('question').value = question;
            askQuestion();
        }
        
        // –ì–ª–∞–≤–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è –æ–±—Ä–∞–±–æ—Ç–∫–∏ –≤–æ–ø—Ä–æ—Å–∞
        function askQuestion() {
            var question = document.getElementById('question').value.trim();
            if (!question) {
                alert(currentLanguage === 'ru' ? '–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –Ω–∞–ø–∏—à–∏ –≤–æ–ø—Ä–æ—Å!' : 
                      currentLanguage === 'uz' ? 'Iltimos, savol yozing!' : 
                      'Please write a question!');
                return;
            }
            
            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –∏–Ω–¥–∏–∫–∞—Ç–æ—Ä –¥—É–º–∞–Ω–∏—è
            var thinking = document.getElementById('thinking');
            thinking.classList.add('show');
            
            // –ò–º–∏—Ç–∏—Ä—É–µ–º –æ–±—Ä–∞–±–æ—Ç–∫—É (–≤ —Ä–µ–∞–ª—å–Ω–æ—Å—Ç–∏ –∑–¥–µ—Å—å –±—É–¥–µ—Ç FMP –¥–≤–∏–∂–æ–∫)
            setTimeout(function() {
                thinking.classList.remove('show');
                processQuestion(question);
            }, 2000);
        }
        
        // –û–±—Ä–∞–±–æ—Ç–∫–∞ –≤–æ–ø—Ä–æ—Å–∞ —Å –ø—Ä–æ—Å—Ç–æ–π –ª–æ–≥–∏–∫–æ–π
        function processQuestion(question) {
            var answer = getSimpleAnswer(question);
            displayAnswer(answer);
        }
        
        // –ü–æ–ª—É—á–µ–Ω–∏–µ –ø—Ä–æ—Å—Ç–æ–≥–æ –æ—Ç–≤–µ—Ç–∞
        function getSimpleAnswer(question) {
            var lowerQuestion = question.toLowerCase();
            var answers = simpleAnswers[currentLanguage] || simpleAnswers['ru'];
            
            // –ü–æ–∏—Å–∫ –≥–æ—Ç–æ–≤–æ–≥–æ –æ—Ç–≤–µ—Ç–∞
            for (var key in answers) {
                if (lowerQuestion.includes(key) || key.includes(lowerQuestion)) {
                    return answers[key];
                }
            }
            
            // –ï—Å–ª–∏ –≥–æ—Ç–æ–≤–æ–≥–æ –æ—Ç–≤–µ—Ç–∞ –Ω–µ—Ç, –¥–∞—ë–º –æ–±—â–∏–π –æ—Ç–≤–µ—Ç
            return generateGeneralAnswer(question);
        }
        
        // –ì–µ–Ω–µ—Ä–∞—Ü–∏—è –æ–±—â–µ–≥–æ –æ—Ç–≤–µ—Ç–∞
        function generateGeneralAnswer(question) {
            var generalAnswers = {
                ru: [
                    'ü§î –≠—Ç–æ –æ—á–µ–Ω—å –∏–Ω—Ç–µ—Ä–µ—Å–Ω—ã–π –≤–æ–ø—Ä–æ—Å! ' + question + ' - —Ç–µ–º–∞, –∫–æ—Ç–æ—Ä—É—é –∏–∑—É—á–∞—é—Ç –º–Ω–æ–≥–∏–µ —É—á—ë–Ω—ã–µ. –î–∞–≤–∞–π —Ä–∞–∑–±–µ—Ä—ë–º –µ—ë –≤–º–µ—Å—Ç–µ!',
                    'üí° –û—Ç–ª–∏—á–Ω—ã–π –≤–æ–ø—Ä–æ—Å! –ü–æ –ø–æ–≤–æ–¥—É "' + question + '" –º–æ–≥—É —Å–∫–∞–∑–∞—Ç—å, —á—Ç–æ —ç—Ç–æ —Å–≤—è–∑–∞–Ω–æ —Å —Ç–µ–º, –∫–∞–∫ —É—Å—Ç—Ä–æ–µ–Ω –Ω–∞—à –º–∏—Ä.',
                    'üåü –¢—ã —Å–ø—Ä–∞—à–∏–≤–∞–µ—à—å –ø—Ä–æ –æ—á–µ–Ω—å –≤–∞–∂–Ω—É—é —Ç–µ–º—É! ' + question + ' - —ç—Ç–æ —Ç–æ, —á—Ç–æ –ø–æ–º–æ–≥–∞–µ—Ç –Ω–∞–º –ª—É—á—à–µ –ø–æ–Ω–∏–º–∞—Ç—å –∂–∏–∑–Ω—å.',
                    'üîç –•–æ—Ä–æ—à–∏–π –≤–æ–ø—Ä–æ—Å! –ß—Ç–æ–±—ã –æ—Ç–≤–µ—Ç–∏—Ç—å –Ω–∞ "' + question + '", –Ω—É–∂–Ω–æ –ø–æ–¥—É–º–∞—Ç—å –æ –º–Ω–æ–≥–∏—Ö –∏–Ω—Ç–µ—Ä–µ—Å–Ω—ã—Ö –≤–µ—â–∞—Ö.'
                ],
                uz: [
                    'ü§î Bu juda qiziq savol! ' + question + ' - ko\'plab olimlar o\'rganadigan mavzu. Keling, uni birga ko\'rib chiqaylik!',
                    'üí° Ajoyib savol! "' + question + '" haqida shuni aytishim mumkinki, bu bizning dunyomiz qanday tuzilgani bilan bog\'liq.',
                    'üåü Siz juda muhim mavzu haqida so\'rayapsiz! ' + question + ' - bu hayotni yaxshiroq tushunishga yordam beradigan narsa.'
                ],
                en: [
                    'ü§î That\'s a very interesting question! ' + question + ' - is a topic that many scientists study. Let\'s explore it together!',
                    'üí° Great question! About "' + question + '" I can say that it\'s related to how our world works.',
                    'üåü You\'re asking about a very important topic! ' + question + ' - is something that helps us better understand life.'
                ]
            };
            
            var answers = generalAnswers[currentLanguage] || generalAnswers['ru'];
            return answers[Math.floor(Math.random() * answers.length)];
        }
        
        // –ü–æ–∫–∞–∑ –æ—Ç–≤–µ—Ç–∞
        function displayAnswer(answer) {
            var resultDiv = document.getElementById('result');
            
            // –î–æ–±–∞–≤–ª—è–µ–º –∞–Ω–∏–º–∞—Ü–∏—é –ø–æ—è–≤–ª–µ–Ω–∏—è
            resultDiv.style.opacity = '0';
            resultDiv.innerHTML = '<h3>üí≠ –û—Ç–≤–µ—Ç TERRA:</h3><p>' + answer + '</p>';
            
            // –ü–ª–∞–≤–Ω–æ–µ –ø–æ—è–≤–ª–µ–Ω–∏–µ
            setTimeout(function() {
                resultDiv.style.opacity = '1';
                resultDiv.style.transition = 'opacity 0.5s';
            }, 100);
        }
        
        // –û–±—Ä–∞–±–æ—Ç–∫–∞ Enter –≤ —Ç–µ–∫—Å—Ç–æ–≤–æ–º –ø–æ–ª–µ
        function handleEnter(event) {
            if (event.keyCode === 13 && !event.shiftKey) {
                event.preventDefault();
                askQuestion();
            }
        }
        
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
        window.onload = function() {
            updateInterface();
            
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º —Å–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç—å –±—Ä–∞—É–∑–µ—Ä–∞
            var isOldBrowser = !document.querySelector || !window.JSON;
            if (isOldBrowser) {
                alert('TERRA —Ä–∞–±–æ—Ç–∞–µ—Ç –¥–∞–∂–µ –Ω–∞ —Å—Ç–∞—Ä—ã—Ö —É—Å—Ç—Ä–æ–π—Å—Ç–≤–∞—Ö! –ù–µ–∫–æ—Ç–æ—Ä—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏ –º–æ–≥—É—Ç —Ä–∞–±–æ—Ç–∞—Ç—å –ø—Ä–æ—â–µ.');
            }
            
            console.log('üß¨ TERRA LLM Engine –∑–∞–≥—Ä—É–∂–µ–Ω –∏ –≥–æ—Ç–æ–≤ –∫ —Ä–∞–±–æ—Ç–µ!');
            console.log('üì± –°–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç—å: iPhone 1+ / Android 2.2+ / IE8+');
            console.log('üåç –ü–æ–¥–¥–µ—Ä–∂–∏–≤–∞–µ–º—ã–µ —è–∑—ã–∫–∏: –†—É—Å—Å–∫–∏–π, O\'zbekcha, English');
        };
    </script>
